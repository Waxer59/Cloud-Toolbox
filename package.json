{
  "name": "cloud-toolbox",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "frontend/",
    "backend/"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "turbo run format --parallel",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.35.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.19",
  "lint-staged": {
    "frontend/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{ts,js,tsx,html,css}": [
      "prettier --write"
    ]
  }
}
